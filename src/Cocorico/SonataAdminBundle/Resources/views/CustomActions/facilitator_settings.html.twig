{% extends "CocoricoSonataAdminBundle::standard_layout.html.twig" %}

{% trans_default_domain 'SonataAdminBundle' %}

{% block navbar_title %}
    <strong>{{ 'facilitator_settings.title'|trans }}</strong> | {{ memberOrganization.name }} ({{ memberOrganization.countryName }})
{% endblock %}

{% block title %}
    {{ 'facilitator_settings.title'|trans }}
{% endblock %}

{% block content %}
    <div class="panel panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12 sonata-ba-form" style="margin-bottom: 10px">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <div class="field-row form-group">
                            {{ form_errors(form.postConfirmation) }}
                            <div class="control-label">
                                <label>{{ 'facilitator_settings.post_confirmation.label'|trans }}</label>
                            </div>
                            <div class="sonata-ba-field sonata-ba-field-standard-natural" style="margin-left: 15px">
                                <div class="post-confirmation-settings">
                                    {{ form_widget(form.postConfirmation) }}
                                </div>
                            </div>
                        </div>
                        <div class="field-row form-group">
                            {{ form_errors(form.messagesConfirmation) }}
                            <div class="control-label">
                                <label>{{ 'facilitator_settings.messages_confirmation.label'|trans }}</label>
                            </div>
                            <div class="sonata-ba-field sonata-ba-field-standard-natural" style="margin-left: 15px">
                                <div class="post-confirmation-settings">
                                    {{ form_widget(form.messagesConfirmation) }}
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="hidden">
                        {{ form_rest(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-body">
        <button class="btn btn-success" type="submit" name="btn_create_and_edit">
            <i class="fa fa-save" aria-hidden="true"></i> Save
        </button>
    </div>

{% endblock %}

