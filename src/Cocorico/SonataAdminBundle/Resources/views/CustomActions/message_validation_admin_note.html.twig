{% extends "CocoricoSonataAdminBundle::standard_layout.html.twig" %}

{% trans_default_domain 'SonataAdminBundle' %}

{% block navbar_title %}
    <strong>{{ 'add_admin_note.title'|trans }}</strong> | {{ message.id }}
{% endblock %}

{% block title %}
    {{ 'add_admin_note.title'|trans }}
{% endblock %}

{% block content %}
    <div class="panel panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <label>{{ 'message.validation.message.label'|trans }}</label>
                        <div class="message-holder border bg-gray-light">
                            <div class="row">
                                <div class="col-lg-6">
                                    <a href="{{ path('admin_cocorico_user_user_edit', {'id': message.sender.id}) }}">
                                        {{ message.sender.fullname }}
                                    </a>
                                </div>
                                <div class="col-lg-6 text-muted text-right">
                                    <i class="glyphicon glyphicon-time"></i>
                                    {{ message.createdAt|date('d.m.Y H:m') }}
                                </div>
                                <div class="col-lg-12" style="margin-top: 15px;">
                                    <div style="display: flex; justify-content: space-between; align-items: flex-end">
                                        <div>
                                            {{ message.body }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 sonata-ba-form" style="margin-top: 13px">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        {{ form_row(form.adminNote) }}
                    </div>
                    <div class="hidden">
                        {{ form_rest(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-body">
        <button class="btn btn-success" type="submit" name="btn_create_and_edit">
            <i class="fa fa-save" aria-hidden="true"></i> Save
        </button>
        <a class="btn btn-default" href="{{ path('cocorico_admin__message_validate_detail', {'id': message.thread.id}) }}">
            <i class="glyphicon glyphicon-chevron-left" aria-hidden="true"></i> Back to conversation
        </a>
    </div>

{% endblock %}

