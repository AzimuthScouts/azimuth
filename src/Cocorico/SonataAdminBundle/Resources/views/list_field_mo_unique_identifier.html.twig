{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {% set value = object.organizationIdentifier %}
    {% set modalId = 'unique-identifier-modal-' ~ object.id %}
    {% if value %}
        <span>{{ value }}</span>
    {% else %}
        {% set identifierUrl = absolute_url(path('cocorico_user_register_additional_info', {'hash': object.uniqueHash})) %}
        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#{{ modalId }}">
            {{ 'request_user_mo_unique_identifier.modal.open.button'|trans({}, 'SonataAdminBundle') }}
        </button>
        <div class="modal fade" id="{{ modalId }}" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="row">
                            <div class="col-lg-10">
                                <h3 class="modal-title" id="exampleModalLabel">
                                    {{ 'request_user_mo_unique_identifier.modal.heading'|trans({}, 'SonataAdminBundle') }}
                                </h3>
                            </div>
                            <div class="col-lg-2">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true" style="font-size: 2em;">&times;</span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <p>
                                    {{ 'request_user_mo_unique_identifier.modal.text'|trans({}, 'SonataAdminBundle') }}
                                </p>
                            </div>
                            <div class="col-lg-12">
                                <input type="text" value="{{ identifierUrl }}" style="width: 100%;">
                            </div>

                        </div>


                    </div>
{#                    <div class="modal-footer">#}
{#                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>#}
{#                        <button type="button" class="btn btn-primary">Save changes</button>#}
{#                    </div>#}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
