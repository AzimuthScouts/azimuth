{% if admin.isGranted('EDIT', object) and admin.hasRoute('edit') %}
    {% set url =  path('cocorico_admin__trusted', {'id': object.id}) %}

    {% if not object.trusted or object.reconfirmRequested %}
        <a href="{{ url }}" class="btn btn-sm btn-default edit_link"
           title="{{ 'list_action_trusted'|trans({}, 'SonataAdminBundle') }}">
            <i class="glyphicon glyphicon-ok"> </i>
            {{ 'list_action_trusted'|trans({}, 'SonataAdminBundle') }}
        </a>
    {% endif %}
{% endif %}