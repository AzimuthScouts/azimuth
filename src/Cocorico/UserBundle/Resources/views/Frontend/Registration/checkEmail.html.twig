{% extends '::base.html.twig' %}

{% block layout %}
    {% embed '@CocoricoCore/Frontend/layout.html.twig' %}
        {% trans_default_domain 'cocorico_user' %}

        {% block main %}
            <div class="col-md-8 col-md-offset-2">
                <h1>{{ 'registration.check_email.h1'|trans }}</h1>

                <div class="alert alert-success-new">
                    <i class="glyphicon glyphicon-ok" style="font-size: 2.3em;">&nbsp;</i>

                    <p>{{ 'registration.check_email'|trans({'%email%': user.email}) }}</p>
                </div>
            </div>
        {% endblock %}

    {% endembed %}
{% endblock layout %}
