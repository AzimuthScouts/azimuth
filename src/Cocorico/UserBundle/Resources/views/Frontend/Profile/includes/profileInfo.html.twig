<div>
    <p class="h4">{{ user.memberOrganization.name }} ({{ user.memberOrganization.countryName }})</p>
    {% if user.location is not empty %}
        <i class="icon-location"></i>
        <span>{{ user.location }}</span>
    {% endif %}
</div>
<div class="mt-5">
    <ul class="info-list">
        {% if user.scoutSince %}
            <li>
                {{ 'form.user.scout_since:'|trans({}, 'cocorico_user') }}
                <strong>{{ user.scoutSince }}</strong>
            </li>
        {% endif %}
        <li>
            {{ 'form.user.age:'|trans({}, 'cocorico_user') }}
            <strong>{{ user.age }}</strong>
        </li>
        {% if user.gender %}
            <li>
                {{ 'form.user.gender:'|trans({}, 'cocorico_user') }}
                <strong>{{ user.gender|trans({}, 'cocorico_user') }}</strong>
            </li>
        {% endif %}
        <li>
            {{ 'user.profile.languages'|trans({}, 'cocorico_user') }}
            <strong class="list-comma">
                {%- if user.motherTongue %}
                    <span>{{ user.motherTongue|language_name(app.request.locale) }}</span>
                {% endif -%}
                {% for language in user.languages -%}
                    <span>{{ language.code|language_name(app.request.locale) }}</span>
                {%- endfor %}
            </strong>
        </li>
    </ul>
</div>