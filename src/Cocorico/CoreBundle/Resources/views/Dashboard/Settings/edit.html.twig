{% extends '@CocoricoCore/Dashboard/layout.html.twig' %}

{% trans_default_domain 'cocorico_user' %}

{% block nav_dashboard -%}
    {% set nav_dashboard_current = 'settings' %}
    {{ parent() }}
{%- endblock %}


{% block main_dashboard %}
    <!-- alert -->
    <div role="tabpanel" class="tab-pane active" id="properties">
        <section class="postarea" style="padding: 30px;">
            {{ form_start(form) }}
            <header class="section-head">
                <h5>{{ 'settings.edit_preferences.title'|trans }}</h5>
            </header>
                {% include 'CocoricoCoreBundle:Frontend/Common:_flash.html.twig' %}
                <div class="row mt-4">
                    <div class="col-lg-12">
                        {{ form_errors(form.newMessageNotifications) }}
                        {{ form_widget(form.newMessageNotifications) }}
                        <span class="label">
                            {{ form_label(form.newMessageNotifications) }}
                    </span>
                    </div>
                </div>
                <div class="row" style="margin-top: 50px;">
                    <div class="btn-block text-center">
                        <button type="submit" class="btn btn-default">{{ 'settings.edit.submit'|trans }}</button>
                    </div>
                </div>
            </div>

            <div class="hidden">
                {{ form_rest(form) }}
            </div>
            {{ form_end(form) }}
        </section>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
{% endblock %}