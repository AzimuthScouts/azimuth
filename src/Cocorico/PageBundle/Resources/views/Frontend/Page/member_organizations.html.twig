{% trans_default_domain 'cocorico' %}

<div id="message-form-container">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h2>{{ 'map.modal.title'|trans }} <span class="text-muted">({{ countryName }})</span></h2> <br/>
    </div>

    <div class="modal-body">
        {% for memberOrganization in memberOrganizations %}
            <div>
                <div class="d-flex align-item-center justify-space-between">
                    <div>
                        <h3>
                            <i class="glyphicon glyphicon-flag me-3"></i>
                            {{ memberOrganization.name }}
                        </h3>
                    </div>
                    <div>
                        <a class="collapsed" data-toggle="collapse" href="#collapseMo{{ memberOrganization.id }}">
                            <i class="glyphicon glyphicon-chevron-down"></i>
                            {{ 'map.member_organization.show_more'|trans }}
                        </a>
                    </div>
                </div>
                <div>
                    <p>{{ memberOrganization.abstract|raw }}</p>
                    <div class="collapse" id="collapseMo{{ memberOrganization.id }}" style="overflow: hidden; height: 0">
                        <h4>{{ 'map.member_organization.detail_info.title'|trans }}</h4>
                        <p>{{ memberOrganization.description|raw }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>

    <script>
        $(function () {
            // script goes here
        });
    </script>
</div>

